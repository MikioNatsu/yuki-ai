# ---- Ollama ----
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=yuki:latest
# generate|chat|auto
OLLAMA_API_MODE=generate

# ---- Runtime ----
TIMEOUT=120
MAX_HISTORY=20
MAX_INPUT_CHARS=2000
LOG_LEVEL=INFO
ENABLE_STREAMING=true

# ---- Storage ----
# memory|sqlite
STORAGE=memory
SQLITE_PATH=./yuki.sqlite3

# ---- Security / UX ----
# Use '*' or comma-separated origins, e.g. http://localhost:3000,http://127.0.0.1:3000
CORS_ORIGINS=*
RATE_LIMIT_PER_MINUTE=60

# ---- Retry ----
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_BASE=0.5
